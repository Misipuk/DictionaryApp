<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_trsln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginRight="38dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_trsln"
            app:layout_constraintVertical_bias="0.727"
            android:textColor="#0e0e0e"/>

        <TextView
            android:id="@+id/text_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="39dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_trsln"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.583"
            android:textColor="#0e0e0e"/>

        <Button
            android:id="@+id/button_trsln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            app:layout_constraintLeft_toRightOf="@+id/text_trsln"
            android:layout_marginLeft="33dp"
            app:layout_constraintRight_toLeftOf="@+id/text_word"
            android:layout_marginRight="33dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="26dp" />

        <ImageButton
            android:id="@+id/del_button"
            android:layout_width="22dp"
            android:layout_height="34dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:layout_marginRight="7dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/text_trsln"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintVertical_bias="1.0" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
