<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:layout_marginRight="38dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_trsln" />

        <TextView
            android:id="@+id/text_trsln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:text="TextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="39dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_trsln"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.583" />

        <Button
            android:id="@+id/button_trsln"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go"
            app:layout_constraintLeft_toRightOf="@+id/text_trsln"
            android:layout_marginLeft="33dp"
            app:layout_constraintRight_toLeftOf="@+id/text_word"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.301"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp" />

    </android.support.constraint.ConstraintLayout>
</LinearLayout>
